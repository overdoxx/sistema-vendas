<!DOCTYPE html>
<html lang="pt-BR" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Gestão de Vendas</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        dark: {
                            50: '#f8fafc',
                            100: '#f1f5f9',
                            200: '#e2e8f0',
                            300: '#cbd5e1',
                            400: '#94a3b8',
                            500: '#64748b',
                            600: '#475569',
                            700: '#334155',
                            800: '#1e293b',
                            900: '#0f172a',
                        }
                    }
                }
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-br from-dark-900 via-dark-800 to-dark-900 min-h-screen">
    <!-- Mobile Menu Overlay -->
    <div id="mobile-menu-overlay" class="fixed inset-0 bg-black bg-opacity-50 z-40 hidden md:hidden" onclick="toggleMobileMenu()"></div>

    <!-- Mobile Menu Sidebar -->
    <div id="mobile-menu" class="fixed inset-y-0 left-0 w-64 bg-dark-800 border-r border-dark-700 z-50 transform -translate-x-full transition-transform duration-300 ease-in-out md:hidden">
        <div class="flex items-center justify-between p-4 border-b border-dark-700">
            <h1 class="text-xl font-bold text-white flex items-center">
                <div class="h-8 w-8 bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg flex items-center justify-center mr-3">
                    <i class="fas fa-chart-line text-sm text-white"></i>
                </div>
                Gestão de Vendas
            </h1>
            <button onclick="toggleMobileMenu()" class="text-gray-400 hover:text-white focus:outline-none">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>
        <div class="px-2 pt-2 pb-3 space-y-1">
            <a href="/dashboard" class="text-white bg-dark-700 block px-3 py-2 rounded-md text-base font-medium">
                <i class="fas fa-tachometer-alt mr-2"></i>Dashboard
            </a>
            <a href="/sales/history" class="text-gray-400 hover:text-white hover:bg-dark-700 block px-3 py-2 rounded-md text-base font-medium transition-colors">
                <i class="fas fa-history mr-2"></i>Histórico
            </a>
            <a href="/top-sellers" class="text-gray-400 hover:text-white hover:bg-dark-700 block px-3 py-2 rounded-md text-base font-medium transition-colors">
                <i class="fas fa-trophy mr-2"></i>Top Vendedores
            </a>
            <div class="border-t border-dark-700 pt-4 pb-3">
                <div class="flex items-center px-3 mb-3">
                    <div class="h-8 w-8 bg-gradient-to-r from-green-500 to-blue-500 rounded-full flex items-center justify-center">
                        <i class="fas fa-user text-sm text-white"></i>
                    </div>
                    <span class="ml-3 text-sm text-gray-300">Olá, <span class="text-white font-medium"><%= user.name %></span></span>
                </div>
                <form action="/auth/logout" method="POST" class="px-3">
                    <button type="submit" class="text-gray-400 hover:text-red-400 text-sm transition-colors">
                        <i class="fas fa-sign-out-alt mr-1"></i>
                        Sair
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Navigation -->
    <nav class="bg-dark-800/80 backdrop-blur-sm shadow-xl border-b border-dark-700 sticky top-0 z-30">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <h1 class="text-xl font-bold text-white flex items-center">
                            <div class="h-8 w-8 bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg flex items-center justify-center mr-3">
                                <i class="fas fa-chart-line text-sm text-white"></i>
                            </div>
                            Gestão de Vendas
                        </h1>
                    </div>
                    <div class="hidden md:ml-8 md:flex md:space-x-8">
                        <a href="/dashboard" class="text-white hover:text-blue-400 px-3 py-2 text-sm font-medium transition-colors border-b-2 border-blue-500">
                            <i class="fas fa-tachometer-alt mr-2"></i>Dashboard
                        </a>
                        <a href="/sales/history" class="text-gray-400 hover:text-blue-400 px-3 py-2 text-sm font-medium transition-colors">
                            <i class="fas fa-history mr-2"></i>Histórico
                        </a>
                        <a href="/top-sellers" class="text-gray-400 hover:text-blue-400 px-3 py-2 text-sm font-medium transition-colors">
                            <i class="fas fa-trophy mr-2"></i>Top Vendedores
                        </a>
                    </div>
                </div>
                
                <!-- Mobile menu button -->
                <div class="md:hidden flex items-center">
                    <button id="mobile-menu-button" onclick="toggleMobileMenu()" class="text-gray-400 hover:text-white focus:outline-none focus:text-white">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                </div>

                <div class="hidden md:flex items-center space-x-4">
                    <div class="flex items-center space-x-3">
                        <div class="h-8 w-8 bg-gradient-to-r from-green-500 to-blue-500 rounded-full flex items-center justify-center">
                            <i class="fas fa-user text-sm text-white"></i>
                        </div>
                        <span class="text-sm text-gray-300">Olá, <span class="text-white font-medium"><%= user.name %></span></span>
                    </div>
                    <form action="/auth/logout" method="POST" class="inline">
                        <button type="submit" class="text-gray-400 hover:text-red-400 text-sm transition-colors">
                            <i class="fas fa-sign-out-alt mr-1"></i>
                            Sair
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="py-6">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Header -->
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-white mb-2">Dashboard</h1>
                <p class="text-gray-400">
                    <i class="fas fa-calendar-day mr-2"></i>
                    Você fez <span id="dailySalesCount" class="text-green-400 font-semibold">...</span> vendas hoje, 
                    somando <span id="dailySalesAmount" class="text-blue-400 font-semibold">...</span> 
                    com comissão de <span id="dailySalesCommission" class="text-purple-400 font-semibold">...</span>.
                </p>
            </div>

            <!-- Stats Cards -->
            <div id="statsCards" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                <!-- Cards serão preenchidos via JS -->
                <div class="bg-gradient-to-br from-green-600 to-green-700 rounded-xl shadow-xl p-6 text-white transform hover:scale-105 transition-all flex items-center justify-center min-h-[120px]">
                    <i class="fas fa-spinner fa-spin text-3xl"></i>
                </div>
                <div class="bg-gradient-to-br from-blue-600 to-blue-700 rounded-xl shadow-xl p-6 text-white transform hover:scale-105 transition-all flex items-center justify-center min-h-[120px]">
                    <i class="fas fa-spinner fa-spin text-3xl"></i>
                </div>
                <div class="bg-gradient-to-br from-purple-600 to-purple-700 rounded-xl shadow-xl p-6 text-white transform hover:scale-105 transition-all flex items-center justify-center min-h-[120px]">
                    <i class="fas fa-spinner fa-spin text-3xl"></i>
                </div>
                <div class="bg-gradient-to-br from-orange-600 to-red-600 rounded-xl shadow-xl p-6 text-white transform hover:scale-105 transition-all flex items-center justify-center min-h-[120px]">
                    <i class="fas fa-spinner fa-spin text-3xl"></i>
                </div>
            </div>

            <!-- Analytics Cards -->
            <div id="analyticsCards" class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <!-- Cards serão preenchidos via JS -->
                <div class="bg-dark-800 rounded-xl shadow-xl p-6 border border-dark-700 flex items-center justify-center min-h-[120px]">
                    <i class="fas fa-spinner fa-spin text-3xl"></i>
                </div>
                <div class="bg-dark-800 rounded-xl shadow-xl p-6 border border-dark-700 flex items-center justify-center min-h-[120px]">
                    <i class="fas fa-spinner fa-spin text-3xl"></i>
                </div>
                <div class="bg-dark-800 rounded-xl shadow-xl p-6 border border-dark-700 flex items-center justify-center min-h-[120px]">
                    <i class="fas fa-spinner fa-spin text-3xl"></i>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Adicionar Venda -->
                <div class="lg:col-span-1">
                    <div class="bg-dark-800 rounded-xl shadow-xl p-6 border border-dark-700">
                        <h3 class="text-lg font-semibold text-white mb-6 flex items-center">
                            <div class="bg-green-600 rounded-lg p-2 mr-3">
                                <i class="fas fa-plus text-white"></i>
                            </div>
                            Nova Venda
                        </h3>
                        <form id="saleForm" class="space-y-4">
                            <div>
                                <label for="saleType" class="block text-sm font-medium text-gray-300 mb-2">
                                    <i class="fas fa-tag mr-2"></i>Tipo de Venda
                                </label>
                                <select id="saleType" name="type" class="w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all">
                                    <option value="individual">Venda Individual</option>
                                    <option value="daily_summary">Venda Diária Total</option>
                                </select>
                            </div>
                            <div>
                                <label for="amount" class="block text-sm font-medium text-gray-300 mb-2">
                                    <i class="fas fa-dollar-sign mr-2"></i>Valor da Venda (R$)
                                </label>
                                <input type="number" 
                                       id="amount" 
                                       name="amount" 
                                       step="0.01" 
                                       min="0.01" 
                                       required
                                       class="w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all"
                                       placeholder="0,00">
                            </div>
                            <div>
                                <label for="date" class="block text-sm font-medium text-gray-300 mb-2">
                                    <i class="fas fa-calendar mr-2"></i>Data da Venda
                                </label>
                                <input type="date" 
                                       id="date" 
                                       name="date" 
                                       required
                                       value="<%= new Date().toISOString().split('T')[0] %>"
                                       class="w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all">
                            </div>
                            <div>
                                <label for="description" class="block text-sm font-medium text-gray-300 mb-2">
                                    <i class="fas fa-comment mr-2"></i>Descrição (opcional)
                                </label>
                                <input type="text" 
                                       id="description" 
                                       name="description" 
                                       class="w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all"
                                       placeholder="Descrição da venda...">
                            </div>
                            <button type="submit" 
                                    class="w-full flex justify-center items-center py-3 px-4 border border-transparent rounded-lg text-white bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all transform hover:scale-105 shadow-lg">
                                <i class="fas fa-plus mr-2"></i>
                                Adicionar Venda
                            </button>
                        </form>
                        
                        <div id="message" class="mt-4 hidden"></div>
                    </div>
                </div>

                <!-- Gráficos -->
                <div class="lg:col-span-2 space-y-6">
                    <!-- Gráfico Semanal -->
                    <div class="bg-dark-800 rounded-xl shadow-xl p-6 border border-dark-700">
                        <h3 class="text-lg font-semibold text-white mb-4 flex items-center">
                            <div class="bg-blue-600 rounded-lg p-2 mr-3">
                                <i class="fas fa-chart-bar text-white"></i>
                            </div>
                            Vendas dos Últimos 7 Dias
                        </h3>
                        <p class="text-gray-400 text-sm mb-6">
                            <i class="fas fa-info-circle mr-2"></i>
                            Mostra "Total Diário" quando disponível, senão soma das vendas individuais
                        </p>
                        <div style="position: relative; height: 300px;">
                            <canvas id="weeklyChart"></canvas>
                        </div>
                    </div>

                    <!-- Gráfico Mensal -->
                    <div class="bg-dark-800 rounded-xl shadow-xl p-6 border border-dark-700">
                        <h3 class="text-lg font-semibold text-white mb-6 flex items-center">
                            <div class="bg-purple-600 rounded-lg p-2 mr-3">
                                <i class="fas fa-chart-line text-white"></i>
                            </div>
                            Evolução Mensal (6 meses)
                        </h3>
                        <div style="position: relative; height: 300px;">
                            <canvas id="monthlyChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
    function toggleMobileMenu() {
        const mobileMenu = document.getElementById('mobile-menu');
        const overlay = document.getElementById('mobile-menu-overlay');
        mobileMenu.classList.toggle('-translate-x-full');
        overlay.classList.toggle('hidden');
    }

    // Função para formatar moeda (replicada do backend para uso no frontend)
    function formatCurrency(amount) {
        return new Intl.NumberFormat("pt-BR", {
            style: "currency",
            currency: "BRL",
        }).format(amount);
    }

    // Função para carregar e renderizar todos os dados do dashboard
    async function loadDashboardData() {
        try {
            const response = await fetch('/dashboard/api/dashboard-data');
            if (!response.ok) {
                throw new Error('Erro ao carregar dados do dashboard.');
            }
            const data = await response.json();

            // Atualizar cabeçalho
            document.getElementById('dailySalesCount').textContent = data.dailyData.count;
            document.getElementById('dailySalesAmount').textContent = formatCurrency(data.dailyData.totalAmount);
            document.getElementById('dailySalesCommission').textContent = formatCurrency(data.dailyData.totalCommission);

            // Atualizar Stats Cards
            const statsCardsHtml = `
                <div class="bg-gradient-to-br from-green-600 to-green-700 rounded-xl shadow-xl p-6 text-white transform hover:scale-105 transition-all">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-green-100 text-sm font-medium">Total Vendido Hoje</p>
                            <p class="text-2xl font-bold">${formatCurrency(data.dailyData.totalAmount)}</p>
                            <p class="text-green-200 text-xs mt-1">${data.dailyData.count} vendas</p>
                        </div>
                        <div class="bg-green-500/30 rounded-full p-3">
                            <i class="fas fa-dollar-sign text-2xl"></i>
                        </div>
                    </div>
                </div>
                <div class="bg-gradient-to-br from-blue-600 to-blue-700 rounded-xl shadow-xl p-6 text-white transform hover:scale-105 transition-all">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-blue-100 text-sm font-medium">Comissão do Dia</p>
                            <p class="text-2xl font-bold">${formatCurrency(data.dailyData.totalCommission)}</p>
                            <p class="text-blue-200 text-xs mt-1">1,5% das vendas</p>
                        </div>
                        <div class="bg-blue-500/30 rounded-full p-3">
                            <i class="fas fa-percentage text-2xl"></i>
                        </div>
                    </div>
                </div>
                <div class="bg-gradient-to-br from-purple-600 to-purple-700 rounded-xl shadow-xl p-6 text-white transform hover:scale-105 transition-all">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-purple-100 text-sm font-medium">Total do Mês</p>
                            <p class="text-2xl font-bold">${formatCurrency(data.monthlyData.totalAmount)}</p>
                            <p class="text-purple-200 text-xs mt-1">${data.monthlyData.count} vendas</p>
                        </div>
                        <div class="bg-purple-500/30 rounded-full p-3">
                            <i class="fas fa-calendar-alt text-2xl"></i>
                        </div>
                    </div>
                </div>
                <div class="bg-gradient-to-br from-orange-600 to-red-600 rounded-xl shadow-xl p-6 text-white transform hover:scale-105 transition-all">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-orange-100 text-sm font-medium">Meta do Mês</p>
                            <p class="text-2xl font-bold">${Math.round(data.advancedAnalytics.goalProgress)}%</p>
                            <p class="text-orange-200 text-xs mt-1">
                                ${formatCurrency(data.advancedAnalytics.monthlyGoal)} meta
                            </p>
                        </div>
                        <div class="bg-orange-500/30 rounded-full p-3">
                            <i class="fas fa-target text-2xl"></i>
                        </div>
                    </div>
                    <div class="mt-4">
                        <div class="bg-orange-500/30 rounded-full h-2">
                            <div class="bg-white rounded-full h-2 transition-all" style="width: ${Math.min(data.advancedAnalytics.goalProgress, 100)}%"></div>
                        </div>
                    </div>
                </div>
            `;
            document.getElementById('statsCards').innerHTML = statsCardsHtml;

            // Atualizar Analytics Cards
            const analyticsCardsHtml = `
                <div class="bg-dark-800 rounded-xl shadow-xl p-6 border border-dark-700">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-lg font-semibold text-white">Crescimento Mensal</h3>
                        <i class="fas fa-chart-line text-green-400"></i>
                    </div>
                    <div class="text-center">
                        <p class="text-3xl font-bold ${data.advancedAnalytics.growth >= 0 ? 'text-green-400' : 'text-red-400'}">
                            ${data.advancedAnalytics.growth >= 0 ? '+' : ''}${data.advancedAnalytics.growth}%
                        </p>
                        <p class="text-gray-400 text-sm mt-1">vs mês anterior</p>
                    </div>
                </div>
                <div class="bg-dark-800 rounded-xl shadow-xl p-6 border border-dark-700">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-lg font-semibold text-white">Ticket Médio</h3>
                        <i class="fas fa-receipt text-blue-400"></i>
                    </div>
                    <div class="text-center">
                        <p class="text-3xl font-bold text-blue-400">
                            ${formatCurrency(data.advancedAnalytics.averageTicket)}
                        </p>
                        <p class="text-gray-400 text-sm mt-1">por venda</p>
                    </div>
                </div>
                <div class="bg-dark-800 rounded-xl shadow-xl p-6 border border-dark-700">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-lg font-semibold text-white">Comissão Mensal</h3>
                        <i class="fas fa-coins text-yellow-400"></i>
                    </div>
                    <div class="text-center">
                        <p class="text-3xl font-bold text-yellow-400">
                            ${formatCurrency(data.monthlyData.totalCommission)}
                        </p>
                        <p class="text-gray-400 text-sm mt-1">este mês</p>
                    </div>
                </div>
            `;
            document.getElementById('analyticsCards').innerHTML = analyticsCardsHtml;

            // Renderizar Gráficos
            renderCharts(data.last7Days, data.monthlyAnalytics);

            // REMOVIDO: renderTopSellers(data.topSellers.sellers, data.topSellers.grandTotalSales);

        } catch (error) {
            console.error('Erro ao carregar dados do dashboard:', error);
            document.getElementById('statsCards').innerHTML = '<p class="text-red-400 col-span-full text-center">Erro ao carregar dados. Tente novamente.</p>';
            document.getElementById('analyticsCards').innerHTML = '<p class="text-red-400 col-span-full text-center">Erro ao carregar dados. Tente novamente.</p>';
            // REMOVIDO: document.getElementById('topSellersList').innerHTML = '<p class="text-red-400 text-center">Erro ao carregar top vendedores.</p>';
        }
    }

    // Função para renderizar os gráficos
    let weeklyChartInstance = null;
    let monthlyChartInstance = null;

    function renderCharts(weeklyData, monthlyData) {
        // Destruir instâncias anteriores para evitar duplicidade
        if (weeklyChartInstance) weeklyChartInstance.destroy();
        if (monthlyChartInstance) monthlyChartInstance.destroy();

        Chart.defaults.color = '#9CA3AF';
        Chart.defaults.borderColor = '#374151';

        // Gráfico Semanal
        const weeklyCtx = document.getElementById('weeklyChart');
        if (weeklyCtx) {
            weeklyChartInstance = new Chart(weeklyCtx, {
                type: 'bar',
                data: {
                    labels: weeklyData.map(day => day.date),
                    datasets: [{
                        label: 'Vendas (R$)',
                        data: weeklyData.map(day => day.amount),
                        backgroundColor: 'rgba(59, 130, 246, 0.8)',
                        borderColor: 'rgba(59, 130, 246, 1)',
                        borderWidth: 2,
                        borderRadius: 8,
                        borderSkipped: false,
                    }, {
                        label: 'Comissão (R$)',
                        data: weeklyData.map(day => day.commission),
                        backgroundColor: 'rgba(16, 185, 129, 0.8)',
                        borderColor: 'rgba(16, 185, 129, 1)',
                        borderWidth: 2,
                        borderRadius: 8,
                        borderSkipped: false,
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            labels: {
                                usePointStyle: true,
                                padding: 20
                            }
                        },
                        tooltip: {
                            callbacks: {
                                afterLabel: function(context) {
                                    const dayData = weeklyData[context.dataIndex];
                                    if (dayData.type === 'daily_summary') {
                                        return 'Tipo: Total Diário';
                                    } else if (dayData.type === 'individual') {
                                        return `Tipo: ${dayData.hasIndividuals} vendas individuais`;
                                    }
                                    return 'Sem vendas';
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: '#374151'
                            },
                            ticks: {
                                callback: function(value) {
                                    return 'R$ ' + value.toLocaleString('pt-BR', {
                                        minimumFractionDigits: 2,
                                        maximumFractionDigits: 2
                                    });
                                }
                            }
                        },
                        x: {
                            grid: {
                                color: '#374151'
                            }
                        }
                    }
                }
            });
        }

        // Gráfico Mensal
        const monthlyCtx = document.getElementById('monthlyChart');
        if (monthlyCtx) {
            monthlyChartInstance = new Chart(monthlyCtx, {
                type: 'line',
                data: {
                    labels: monthlyData.map(month => month.month),
                    datasets: [{
                        label: 'Vendas (R$)',
                        data: monthlyData.map(month => month.amount),
                        borderColor: 'rgba(147, 51, 234, 1)',
                        backgroundColor: 'rgba(147, 51, 234, 0.1)',
                        borderWidth: 3,
                        fill: true,
                        tension: 0.4,
                        pointBackgroundColor: 'rgba(147, 51, 234, 1)',
                        pointBorderColor: '#ffffff',
                        pointBorderWidth: 2,
                        pointRadius: 6,
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            labels: {
                                usePointStyle: true,
                                padding: 20
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: '#374151'
                            },
                            ticks: {
                                callback: function(value) {
                                    return 'R$ ' + value.toLocaleString('pt-BR', {
                                        minimumFractionDigits: 2,
                                        maximumFractionDigits: 2
                                    });
                                }
                            }
                        },
                        x: {
                            grid: {
                                color: '#374151'
                            }
                        }
                    }
                }
            });
        }
    }

    // REMOVIDO: Função para renderizar Top Vendedores
    // function renderTopSellers(sellers, grandTotalSales) { ... }

    // Formulário de venda
    document.getElementById('saleForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const amount = document.getElementById('amount').value;
        const date = document.getElementById('date').value;
        const description = document.getElementById('description').value;
        const type = document.getElementById('saleType').value;
        const messageDiv = document.getElementById('message');
        
        try {
            const response = await fetch('/sales/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ 
                    amount: parseFloat(amount),
                    date: date,
                    description: description,
                    type: type
                })
            });
            
            const data = await response.json();
            
            if (data.success) {
                messageDiv.className = 'mt-4 p-4 bg-green-900/50 border border-green-500 text-green-300 rounded-lg';
                messageDiv.innerHTML = '<i class="fas fa-check-circle mr-2"></i>' + data.message;
                messageDiv.classList.remove('hidden');
                
                // Limpar formulário
                document.getElementById('amount').value = '';
                document.getElementById('description').value = '';
                
                // Recarregar dados do dashboard sem recarregar a página
                loadDashboardData();

                // Ocultar mensagem após 3 segundos
                setTimeout(() => {
                    messageDiv.classList.add('hidden');
                }, 3000);

            } else {
                throw new Error(data.error);
            }
        } catch (error) {
            messageDiv.className = 'mt-4 p-4 bg-red-900/50 border border-red-500 text-red-300 rounded-lg';
            messageDiv.innerHTML = '<i class="fas fa-exclamation-triangle mr-2"></i>Erro ao adicionar venda: ' + error.message;
            messageDiv.classList.remove('hidden');
            setTimeout(() => {
                messageDiv.classList.add('hidden');
            }, 5000);
        }
    });

    // Carregar dados do dashboard quando o DOM estiver pronto
    document.addEventListener('DOMContentLoaded', loadDashboardData);
    </script>
